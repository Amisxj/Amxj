<!--pages/login/index.wxml-->
<view class="container">
  <view class="content">
    <view class="content-wave" style="transform: rotateZ({{angle}}deg)">
      <image class="logo" src="../../resource/static/images/app_icon.png" ></image>
      <image class="wave" src="../../resource/static/images/wave.png" mode="aspectFit"></image>
      <image class="wave wave-bg" src="../../resource/static/images/wave.png" mode="aspectFit"></image>
    </view>
    <view class="form-bd">
      <view class="input-area">
        <i-panel>
          <i-input i-class="input-login account" type="text" title="账号" placeholder="手机号/邮箱"></i-input>
          <i-input i-class="input-login password" type="password" title="密码" placeholder="密码"></i-input>
        </i-panel>
      </view>

      <view class="option-select">
        <view class="join"><text bindtap="toRegister">加入綦智交流</text></view>
        <view class="forget"><text bindtap="toFindPass">忘记密码</text></view>
      </view>

      <view class="confirm-btn" bindtap="goToIndex">
        <text>登录綦智校</text>
      </view>
    </view>
  </view>

  <i-message id="message"></i-message>
</view>