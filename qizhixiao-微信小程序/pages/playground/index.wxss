/* pages/playground/index.wxss */
.content{
  width: 100vw;
}

.content-list-group{
  padding-right: 10px;
}

.author-icon{
  float: left;
}

.author-intro{
  padding-left: 40px;
  font-size: 14px;
}

.author-intro .author-nickname{
  color: rgb(241,162,0);
}

.author-intro .author-school{
  font-size: 10px;
  color: #aaa;
}

.author-intro .author-school .send-time{
  padding-right: 10px;
}


.author-intro .author-school .school-name{
  color: #6ea7c1;
}


.message-content{
  padding-top: 10px;
  color: #000;
  font-size: 14px;
  box-sizing: border-box;
}

.author-intro .author-favorite{
  float: right;
  position: relative;
  width: 40px;
  height: 25px;
  color: #fff;
  line-height: 25px;
  text-align: center;
  border-radius: 3px;
  text-align: center;
  border-radius: 3px;
  background: var(--grey);
  top: -28px;
}


/* 图片九宫格样式 */


.message-content .content-imgs{
  padding-top: 10px;
}

.grid-single{
  width: 100%;
}
.img-container-single{
  padding: 1px;
  height: 200px;
}

.content-imgs .img-item-single{
  border-radius: 3px;
}


.img-container-double{
  height: 120px;
  padding: 1px;
}

.content-imgs .img-item-double{
  border-radius: 3px;
}

.img-container{
  padding: 1px;

}

.content-imgs .img-item{
  border-radius: 3px;
  height: 80px;
  width: 98%;
  margin: 0 0 0 1%;
}

.message-operation{
  width: 100%;
  text-align: center;
  padding-top: 10px;
}

.operation-item{
  overflow: hidden;
  box-sizing: border-box;
  width: 50px;
  margin: 0 auto;
}

.operation-icon{
  width: 16px;
  height: 16px;
  float: left;
  display: block;
}

.operation-icon image{
  width: 100%;
  height: 100%;
}

.operation-label{
  display: block;
  text-align: left;
  color: #1c2438;
  font-size: 11px;
  line-height: 16px;
  padding-left: 8px;
  white-space: normal;
  text-overflow: ellipsis;
  overflow: hidden;
}

