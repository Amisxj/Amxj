<!--pages/join/index.wxml-->
<view class="container">
  <view class="form-area" >
    <view class="padding margin-top" >
      
      <i-input title="账号" placeholder="手机号/邮箱" mode="wrapped" type="text" right value="{{account}}" bind:change="changeAccount"></i-input>
      <i-input title="密码" placeholder="密码" mode="wrapped" type="password" right value="{{password}}" bind:change="changePass"></i-input>
      <i-input title="确认密码" placeholder="确认密码" mode="wrapped" type="password" right value="{{repeatPass}}" bind:change="changeRepeatPass"></i-input>
    </view>
   
    <view class="btn-area">
      <i-button type="primary" bind:click="registerAction">注册账号</i-button>
    </view>

    <i-modal visible="{{visiDialog}}" bind:ok="confirmCode" bind:cancel="cancelCode" title="验证码已发送，请输入">
      <i-input value="{{validateCode}}" type="number" right title="验证码" mode="wrapped" bind:change="changeValidateCode"></i-input>
    </i-modal>
  </view>
</view>